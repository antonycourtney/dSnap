{
  "manifest_version": 3,
  "name": "dSnap",
  "version": "1.0.0",
  "description": "Restore window layouts when switching between display configurations",
  "permissions": [
    "system.display",
    "windows",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}